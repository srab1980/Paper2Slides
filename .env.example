# Paper2Slides Environment Configuration for Coolify/Hostinger

# Backend Port (default: 8000)
BACKEND_PORT=8000

# Frontend Port (default: 5173, but Coolify will manage this)
FRONTEND_PORT=5173

# API URL for frontend (will be set by Coolify based on your domain)
VITE_API_URL=http://localhost:8000

# LLM API Configuration (for RAG)
RAG_LLM_API_KEY=your_openai_or_deepseek_api_key_here
RAG_LLM_BASE_URL=https://api.openai.com/v1
RAG_LLM_MAX_TOKENS=16000

# Image Generation Configuration
IMAGE_GEN_PROVIDER=openrouter
IMAGE_GEN_API_KEY=your_image_gen_api_key_here
IMAGE_GEN_BASE_URL=https://openrouter.ai/api/v1
IMAGE_GEN_MODEL=google/gemini-3-pro-image-preview
IMAGE_GEN_RESPONSE_MIME_TYPE=image/png

# Google Gemini Configuration (if using IMAGE_GEN_PROVIDER=google)
GOOGLE_GENAI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
